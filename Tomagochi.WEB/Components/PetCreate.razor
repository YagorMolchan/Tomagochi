@using Tomagochi.WEB.Models.Forms
@using Microsoft.AspNetCore.Components.Web

<div class="pet-container">
    <div class="pet-form">
        <div class="form-group">
            <h6>Body</h6>
            <div class="image-container">
                @foreach (var item in Model.Bodies)
                {
                    <button @onclick="(() => OnBodyClick(item))"  class="image-button" id="@item">
                        <img src="@item" width="80" height="80"/>
                    </button>
                }
            </div>
        </div>
        <div class="form-group">
            <h6>Eyes</h6>
            <div class="image-container">
                @foreach (var item in Model.Eyes)
                {
                    <button @onclick="(() => OnEyesClick(item))" class="image-button" id="@item">
                        <img src="@item" width="80" height="80"/>
                    </button>
                 }
            </div>
        </div>
        <div class="form-group">
                <h6>Nose</h6>
                <div class="image-container">
                    @foreach (var item in Model.Noses)
                    {
                        <button @onclick="(() => OnNosesClick(item))" class="image-button" id="@item">
                            <img src="@item" width="80" height="80"/>
                        </button>
                    }
                </div>
            </div>
        <div class="form-group">
                <h6>Mouth</h6>
                <div class="image-container">
                    @foreach (var item in Model.Mouths)
                    {
                        <button @onclick="(() => OnMouthsClick(item))" class="image-button" id="@item">
                            <img src="@item" width="80" height="80"/>
                        </button>
                    }
                </div>
            </div>
    </div>
    <div class="pet-image">
        <div>
            @if(Model.Eye is not null)
            {
                <img src="@Model.Eye" width="80" height="80"/>
            }
        </div>
        <div>
            @if(Model.Nose is not null)
            {
                <img src="@Model.Nose" width="80" height="80"/>
            }
        </div>
        <div>
            @if(Model.Mouth is not null)
            {
                <img src="@Model.Mouth" width="80" height="80"/>
            }
        </div>
        <div>
            @if(Model.Body is not null)
            {
                <img src="@Model.Body" width="80" height="80"/>
            }
        </div>
        @*<PetDraw EyesChanged="OnEyesClick" ></PetDraw>*@
    </div>
    
</div>



@code {

    [Parameter]
    public PetFormModel Model { get; set; }

    private void OnBodyClick(string body){
        throw new Exception();
        Model.Body = body;
    }

    private void OnEyesClick(string eyes)
    {
        Model.Eye = eyes;
    }

    private void OnNosesClick(string noses)
    {
        Model.Nose = noses;
    }

    private void OnMouthsClick(string mouths)
    {
        Model.Mouth = mouths;
    }


}
